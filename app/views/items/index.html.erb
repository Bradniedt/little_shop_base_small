<h2>Items Catalog</h2>

<% @items.each do |item| %>
  <%= tag.div id: "item-#{item.id}" do %>
  <a href="<%= item_path(item) %>">
  <img id="item-<%= item.id %>-image" alt="image for <%= item.name %>" src="<%= item.image %>" width="200" />
  </a>

  <%= link_to item.name, item_path(item) %>
    <p>Price: <%= number_to_currency(item.price) %></p>
    <p>
      <strong>Sold by:</strong> <%= item.user.name %><br/>
      <strong>In stock:</strong> <%= item.inventory %>
    </p>
  <% end %>
<% end %>