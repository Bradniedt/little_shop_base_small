<nav>
  <ul>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Items', items_path %></li>
    <li><%= link_to 'Merchants', merchants_path %></li>
    <% if !current_user || current_user.default? %>
    <li><%= link_to "Cart: #{@cart.total_count}", cart_path %></li>
    <% end %>
    <% if current_user %>
      <% if current_user.default? %>
      <li><%= link_to 'Profile', profile_path %></li>
      <li><%= link_to 'Orders', profile_orders_path %></li>
      <% elsif current_merchant? %>
      <li><%= link_to 'Dashboard', dashboard_path %></li>
      <% elsif current_admin? %>
      <li><%= link_to 'Users', admin_users_path %></li>
      <li><%= link_to 'Dashboard', admin_dashboard_index_path %></li>
      <% end %>
      <li><%= link_to 'Log out', logout_path %></li>
    <% else %>
      <li><%= link_to 'Log in', login_path %></li>
      <li><%= link_to 'Register', registration_path %></li>
    <% end %>
  </ul>
</nav>
